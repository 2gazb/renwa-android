<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- ボタンが押されてない時 -->
    <item android:state_pressed="false">
        <!-- ボタンの形状 -->
        <shape android:shape="rectangle">
            <!-- ボタンのグラデーション -->
            <gradient android:angle="270" android:endColor="#2F69AE" android:startColor="#2F69AE"/>
            <!-- ボタンの枠線 -->
            <stroke android:width="0dp" android:color="#ffc7c7c7"/>
            <!-- ボタンの角の半径 -->
            <corners android:radius="5dp"/>
            <!-- ボタン内の余白 -->
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp"/>

            <!-- <size android:height="30dp" android:width="30dp" /> -->
        </shape>
    </item>

    <!-- ボタンが押された時 -->
    <item android:state_pressed="true">
        <!-- ボタンの形状 -->
        <shape android:shape="rectangle">
            <!-- ボタンのグラデーション -->
            <gradient android:angle="270" android:endColor="#084678" android:startColor="#084678"/>
            <!-- ボタンの枠線 -->
            <stroke android:width="0dp" android:color="#ffc7c7c7"/>
            <!-- ボタンの角の半径 -->
            <corners android:radius="5dp"/>
            <!-- ボタン内の余白 -->
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp"/>
        </shape>
    </item>
</selector>